{
	"name": "@wago/wdx-ws-client-js",
	"description": "WAGO - WDX - WS - Client - JavaScript",
	"keywords": [
		"WAGO",
		"WDX",
		"WS",
		"Client",
		"JavaScript"
	],
	"license": "(C) Copyright 2024 Elrest Automations Systeme GMBH",
	"author": "Slavomir Sidor <slavomir.sidor@elrest.cz>",
	"contributors": [
		{
			"name": "Pavol Fazik",
			"email": "pavol.fazik@elrest.cz"
		},
		{
			"name": "Slavomir Sidor",
			"email": "slavomir.sidor@elrest.cz"
		}
	],
	"version": "1.9.2",
	"main": "build/index.js",
	"types": "build/index.d.ts",
	"directories": {
		"test": "tests"
	},
	"scripts": {
		"prebuild": "",
		"postbuild": "./scripts/postbuild.sh",
		"build": "npm run build-tsc",
		"build:dev": "npm run build-tsc",
		"build:prod": "npm run npm run build-tsc",
		"build-tsc": "npx tsc",
		"test": "jest",
		"docs": "npx typedoc --options ./typedoc.json",
		"docs:json": "npx typedoc --json ./docs/docs.json --pretty --options ./typedoc.json",
		"docs-readme": "npx typedoc --plugin typedoc-plugin-markdown --theme markdown --out docs/readme && npx concat-md --toc --decrease-title-levels --dir-name-as-title temp-docs > README.md && npx showdown makehtml -i README.md -o README.html && npx rimraf temp-docs",
		"publish:patch": "npm run build && npm version patch && npm publish --patch  --registry $NPM_SNAPSHOTS_REGISTRY",
		"publish:minor": "npm run build && npm version minor && npm publish --minor  --registry $NPM_RELEASES_REGISTRY",
		"publish:major": "npm run build && npm version major && npm publish --major  --registry $NPM_RELEASES_REGISTRY",
		"clean": "npx rimraf ./docs ./build ./.build.json ./.build.json",
		"cover": "npm run cover:unit && npm run cover:integration && npm run cover:report",
		"cover:unit": "nyc --silent npm run test:unit",
		"cover:integration": "nyc --silent --no-clean npm run test:integration",
		"cover:report": "nyc report --reporter=lcov --reporter=text"
	},
	"dependencies": {
		"@wago/wdx-schema": "^x.x.x",
		"rxjs": "^7.8.1",
		"uuid": "^9.0.x",
		"websocket": "^1.0.35"
	},
	"devDependencies": {
		"@babel/preset-typescript": "^7.24.7",
		"@types/jest": "^29.5.12",
		"@types/node": "^20.10.1",
		"@types/uuid": "^9.0.7",
		"@types/websocket": "^1.0.10",
		"jest": "^29.7.0",
		"nodemon": "^3.0.1",
		"rimraf": "^5.0.5",
		"ts-jest": "^29.2.3",
		"ts-node": "^10.9.2",
		"typedoc": "^0.25.7",
		"typescript": "^5.3.3"
	}
}
